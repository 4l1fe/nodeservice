doctype html
html
    include config
    include mixins
    include head
    body
        include header
        .shadow-container-wrapper.is-header-pushed.page-messages.height100rel
            .shadow-container.height100rel
                section.page-msg-block.height100rel
                    .container.height100rel
                        .row.height100rel
                            .col-md-3.col-sm-4.col-xs-3.users-column.height100rel
                                .column-header
                                    a(href="#").letters-button Переписка
                                    a(href="#").feed-button Лента
                                    .clearboth
                                .users-list-wrapper.height100rel
                                    .users-list
                                        if users && users.length
                                            each user in users
                                                - user_item_class = user.is_selected ? 'is-selected' : '';
                                                - user_url = "/users/" + user.id
                                                a.user-item(class=user_item_class, href=user_url)
                                                    .user-avatar
                                                        - avatar_url = noavatar_url
                                                        - if( user.avatar != null && user.avatar.length ) {
                                                            - avatar_url = user.avatar
                                                        - }
                                                        img(src=avatar_url, alt="", title="")
                                                    .user-name=user.name
                                                    .clearboth
                            .col-md-6.col-sm-8.col-xs-9.msg-column.height100rel
                                .column-header
                                    a(href="#").selected-user-name Lady GAGA
                                    .sprite.sprite-i-trash-bin
                                    a(href="#").delete-msg-history-btn
                                        .sprite.sprite-i-trash-can
                                        em Удалить переписку
                                .msg-list-wrapper.height100rel
                                    .msg-list.height100rel
                                        if msg_items && msg_items.length
                                            each msg_item in msg_items
                                                .msg-item
                                                    .user-avatar
                                                        - avatar_url = noavatar_url
                                                        - if( msg_item.user.avatar != null && msg_item.user.avatar.length ) {
                                                            - avatar_url = msg_item.user.avatar
                                                        - }
                                                        img(src=avatar_url, alt="", title="")
                                                    .msg-item-def
                                                        - user_url = "/users/" + msg_item.user.id
                                                        a(href=user_url).user-name=msg_item.user.name
                                                        span.msg-created=time_text_str(msg_item.created)
                                                        .msg-text=msg_item.text
                                                    .clearboth

                                .msg-input-area
                                    .msg-item
                                        .msg-item-def
                                            .user-avatar
                                                - avatar_url = noavatar_url
                                                - if( current_user.avatar != null && current_user.avatar.length ) {
                                                    - avatar_url = current_user.avatar
                                                - }
                                                img(src=avatar_url, alt="", title="")
                                            .msg-text
                                                span.textarea-arrow
                                                textarea(placeholder="Нажмите Enter, чтобы отправить")
                            .col-md-3.col-sm-3.col-xs-3.good-casts-column.visible-md-block.visible-lg-block.height100rel
                                .column-header
                                    h3 Рекомендуемые
                                .good-casts-list-wrapper.height100rel
                                    .good-casts-list.height100rel
                                        if recomended_casts && recomended_casts.length
                                            each item in recomended_casts
                                                .cast-thumb
                                                    mixin cast_thumb(item)