.modal.fade(tabindex='-1', role='dialog', area-hidden='true')#auth_modal
    .modal-dialog
        .modal-content
            .modal-header
                button(type="button",data-dismiss="modal").close
                    span(aria-hidden="true") &times;
                    span.sr-only Close
            .modal-body
                ul.nav.nav-tabs
                    li
                        a(href='#login_tab', data-toggle='tab')
                            span Вход на сайт
                    li.active
                        a(href='#reg_tab', data-toggle='tab')
                            span Регистрация
                ul.social
                    li
                        a(href="/login/vk")
                            img(src=res.img + "soc_ico_vk.png", alt="Вконтакте", title="Вход через Вконтакте")
                    li
                        a(href="/login/fb")
                            img(src=res.img + "soc_ico_fb.png", alt="Фейсбук", title="Вход через Фейсбук")
                    li
                        a(href="/login/twitter")
                            img(src=res.img + "soc_ico_twitter.png", alt="Твиттер", title="Вход через Твиттер")
                    li
                        a(href="/login/ok")
                            img(src=res.img + "soc_ico_ok.png", alt="Одноклассники", title="Вход через Одноклассники")
                .tab-content.popup-content
                        #reg_tab.tab-pane.active
                            form.form-popup(role='form',method="post",action="/register")
                                .form-group
                                    input#inputEmail1.form-control(type="email",name='login',required,placeholder="Электронная почта")
                                .form-group
                                    input#inputPassword1.form-control(type='password',name='password',required,placeholder="Пароль")
                                .form-group
                                    button.btn.btn-success(type='submit') Зарегистрироваться
                        #login_tab.tab-pane
                            form.form-popup(role='form',method="post",action="/login")
                                .form-group
                                    input#inputEmail1.form-control(name='login',required,placeholder="Электронная почта или телефон")
                                .form-group
                                    input#inputPassword1.form-control(type='password',name='password',required,placeholder="Пароль")
                                .form-group
                                    button.btn.btn-success(type='submit') Войти
